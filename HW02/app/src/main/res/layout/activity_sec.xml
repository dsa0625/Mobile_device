<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="140dp"
        android:text="Confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/IdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="@+id/confirm_button"
        app:layout_constraintStart_toStartOf="@+id/confirm_button"
        app:layout_constraintTop_toBottomOf="@+id/confirm_button" />

    <EditText
        android:id="@+id/IdHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Height(M)"
        app:layout_constraintEnd_toEndOf="@+id/IdName"
        app:layout_constraintStart_toStartOf="@+id/IdName"
        app:layout_constraintTop_toBottomOf="@+id/IdName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/IdWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Weight(Kg)"
        app:layout_constraintEnd_toEndOf="@+id/IdHeight"
        app:layout_constraintStart_toStartOf="@+id/IdHeight"
        app:layout_constraintTop_toBottomOf="@+id/IdHeight"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>